{
	"version": "2.4.2",
	"compilerOptions": {
		"lib": [
			"es5",
			"es6"
		],
		"allowJs": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "dist",
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules"
	]
}